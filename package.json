{
  "name": "scout-discord-bot",
  "private": true,
  "version": "0.0.1",
  "description": "A Discord bot custom-made for 'Programming Made Easy' Discord server",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "build": "rm -rf dist/ && npm run lint && tsc && cp .env dist/",
    "deploy:commands": "npm run build && ts-node dist/deploy_commands.js",
    "dev": "NODE_ENV=development nodemon -e ts --exec 'npm run deploy:commands && ts-node src/index.ts'",
    "typeorm": "npm run build && npx typeorm -d dist/db/data_source.js",
    "migrate": "npm run typeorm -- migration:run",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watch"
  },
  "keywords": [
    "bot",
    "discord"
  ],
  "author": "Mettle X",
  "license": "SEE LICENSE IN license.md",
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "babel-jest": "^29.5.0",
    "eslint": "^8.41.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@discordjs/voice": "^0.16.0",
    "better-sqlite3": "^8.4.0",
    "bufferutil": "^4.0.7",
    "colorette": "^2.0.20",
    "discord.js": "^14.11.0",
    "dotenv": "^16.0.3",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16",
    "utf-8-validate": "^6.0.3"
  }
}
